<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F4"
    android:orientation="vertical"
    tools:context="com.cshen.tiyu.activity.mian4.personcenter.setting.binding.NameAuthActivity" >
<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="登录密码" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_old_password"
            style="@style/safe_item_linearlayout"
            android:background="#FFFFFF"
            android:focusable="false"
            android:focusableInTouchMode="false" >

            <TextView
                style="@style/safe_item_text"
                android:text="旧 密 码"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/et_old_password"
                style="@style/safe_item_edittext"
                android:hint="请输入您当前的登录密码"
                android:password="true"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF" >

            <TextView
                style="@style/safe_item_text"
                android:text="新 密 码"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/et_new_password"
                style="@style/safe_item_edittext"
                android:digits="@string/password_content"
                android:hint="@string/please_enter_password"
                android:password="true"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF" >

            <TextView
                style="@style/safe_item_text"
                android:text="确认密码"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/et_sure_password"
                style="@style/safe_item_edittext"
                android:digits="@string/password_content"
                android:hint="请在输入一次新登录密码"
                android:password="true"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_sure"
           style="@style/grayButton_normal"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="确认修改" />

</LinearLayout>