<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/hunhe_item"
            style="@style/tz_115_view_back"
            android:background="@drawable/footballchooseview_itemback" >

            <TextView
                android:id="@+id/hunhe_itemtv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="混合过关"
                android:textColor="#ff812a"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spf_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/spf_itemtv"
                style="@style/tz_115_back"
                android:text="胜平负(让)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jqs_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/jqs_itemtv"
                style="@style/tz_115_back"
                android:text="进球数" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >


        <LinearLayout
            android:id="@+id/bqc_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/bqc_itemtv"
                style="@style/tz_115_back"
                android:text="半全场" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bf_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/bf_itemtv"
                style="@style/tz_115_back"
                android:text="比分" />
        </LinearLayout>

        <LinearLayout
            style="@style/tz_115_view_back"
            android:visibility="invisible" >

            <TextView
                style="@style/tz_115_back"
                android:text="胜平负(让)" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>