<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="125dp"
    android:background="@mipmap/redpacket_bg" >

    <TextView
        android:id="@+id/tv_red_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:text="15"
        android:textColor="@color/mainred"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/tv_red_money"
        android:src="@mipmap/time" />

    <ImageView
        android:id="@+id/iv_choose_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/checkbox_selector"
        
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_red_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_choose_img"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/iv_choose_img"
        android:text="彩票活动优惠券"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:textColor="@color/gray"
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_choose_img"
        android:layout_alignLeft="@+id/tv_red_title"
        android:text="20元可用" />

    <TextView
        android:id="@+id/tv_red_time"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="2015.10.20-2015.11.1" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/TextView02"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/money_ic" />

</RelativeLayout>