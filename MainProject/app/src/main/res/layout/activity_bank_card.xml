<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cshen.tiyu.activity.mian4.personcenter.setting.binding.NameAuthActivity" >
<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="提款银行卡" />

    <TextView
        style="@style/bg_item_info"
        android:textColor="#e63c42"
        android:text="银行卡开户姓名必须与实名认证一致，否则无法提款！" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >

        <LinearLayout style="@style/safe_item_linearlayout" >

            <TextView
                style="@style/safe_item_text"
                android:text="姓  名" />

            <TextView
                android:id="@+id/et_real_name"
                style="@style/safe_item_edittext"
                android:hint="请输入真实姓名" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="身份证" />

            <TextView
                android:id="@+id/et_idCard"
                style="@style/safe_item_edittext"
                android:hint="请输入身份证号" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ibtn_bank_name"
            style="@style/safe_item_linearlayout" >

            <TextView
                style="@style/safe_item_text"
                android:text="银  行" />

            <TextView
                android:id="@+id/et_bankName"
                style="@style/safe_item_textview"
                android:text="选择银行" />

            <ImageView
                android:id="@+id/ibtn_bank_name_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@mipmap/ouer_b_i_06" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="卡号" />

            <EditText
                android:id="@+id/et_bankCard"
                style="@style/safe_item_edittext"
                android:hint="暂不支持信用卡"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ibtn_province_city"
            style="@style/safe_item_linearlayout" >

            <TextView
                style="@style/safe_item_text"
                android:text="开户地" />

            <TextView
                android:id="@+id/et_province_city"
                style="@style/safe_item_textview"
                android:text="请选择开户行地区" />

            <ImageView
                android:id="@+id/ibtn_province_city_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@color/white"
                android:src="@mipmap/ouer_b_i_03" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="开户行" />

            <EditText
                android:id="@+id/et_parkBankName"
                style="@style/safe_item_edittext"
                android:hint="请输入开户行银行" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_sure"
        style="@style/redButton_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="确认" />

</LinearLayout>