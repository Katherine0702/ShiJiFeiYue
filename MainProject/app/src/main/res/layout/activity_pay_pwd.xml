<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cshen.tiyu.activity.mian4.personcenter.setting.binding.NameAuthActivity" >
<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="支付密码设置" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_old_password"
            style="@style/safe_item_linearlayout"
            android:visibility="gone" >

            <TextView
                style="@style/safe_item_text"
                android:text="旧 密 码" />

            <EditText
                android:id="@+id/et_old_password"
                style="@style/safe_item_edittext"
                android:inputType="number"
                android:hint="请输入现用的密码"
                android:maxLength="6"
                android:password="true" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="新 密 码" />

            <EditText
                android:id="@+id/et_new_password"
                style="@style/safe_item_edittext"
                android:hint="请输入6位数字"
                android:inputType="number"
                android:maxLength="6"
                android:password="true" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="确认密码" />

            <EditText
                android:id="@+id/et_sure_password"
                style="@style/safe_item_edittext"
                android:inputType="number"
                android:maxLength="6"
                android:hint="请再次输入新密码"
                android:password="true" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="绑定号码" />

            <TextView
                android:id="@+id/tv_bind_mobile"
                style="@style/safe_item_edittext"
                android:background="@drawable/bg_edittext_normal" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:text="验 证 码" />

            <EditText
                android:id="@+id/et_code"
                style="@style/safe_item_edittext"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6" />

            <Button
                android:id="@+id/btn_verif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/selector_hidebtn"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="获取验证码"
                android:textColor="@drawable/yzmtext"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_sure"
        style="@style/redButton_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="确认" />

</LinearLayout>