<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingRight="10dp" 
    android:paddingLeft="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/buytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="5月12日  "
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gendan"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/gendan_can" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:text="已跟投 "
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3,708元  "
                    android:textColor="@color/mainred"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chuanfa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="过关方式：3串1"
                android:textColor="#3d3d3d"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/endtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:gravity="center"
                android:text="05-04 23:50:00截止"
                android:textColor="#454545"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:gravity="center"
                android:text="编号"
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:alpha="0.8"
                android:gravity="center"
                android:text="主队VS客队"
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:alpha="0.8"
                android:gravity="center"
                android:text="大神投注"
                android:textColor="#666666"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB" />

        <LinearLayout
            android:id="@+id/match1"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/matchkey1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周四008"
                android:textColor="#3d3d3d"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hostteamname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="玻利维亚"
                    android:textColor="#3d3d3d"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textColor="#3d3d3d"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/gustteamname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巴巴多斯"
                    android:textColor="#3d3d3d"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/touzhu1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="主胜"
                android:textColor="@color/mainred"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/matchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" >

            <LinearLayout
                android:id="@+id/tuijian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cornerfullblue"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="析"
                    android:textColor="#ffffff"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tuijiantitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="投"
                    android:textColor="#2c2c2c"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/realtime"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="#F9F9F9"
                    android:focusable="true"
                    android:gravity="center"
                    android:maxLength="5"
                    android:text="10"
                    android:textColor="#BE9A6B"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="倍"
                    android:textColor="#2c2c2c"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tobuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cornerfullred"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="立即跟单"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/prize"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/prize_yes"
        android:visibility="gone" />

</RelativeLayout>