<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:wxq="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="注册成功" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:gravity="center"
	    android:layout_marginTop="100dp"
	    android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/iv_success"
			android:layout_width="30dp"
			android:layout_height="30dp"
		   android:layout_centerVertical="true"
			android:src="@mipmap/iv_register_sccess"/>
	    <TextView 
	        android:id="@+id/tv_success"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="恭喜，1元彩金已到账"
	        android:textColor="#000000"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@id/iv_success"
	        android:textSize="18sp"/>
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="实名认证额外得2元彩金"
	        android:layout_marginTop="3dp"
	         android:layout_marginLeft="10dp"
	        android:textColor="@color/gray"
	        android:layout_toRightOf="@id/iv_success"
	        android:layout_below="@id/tv_success"
	        android:textSize="12sp"/>
	</RelativeLayout>
	<TextView 
	    android:id="@+id/tv_toMain"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:padding="10dp"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:textSize="14sp"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:background="@drawable/selector_redbutton"
	    android:text="开启中奖之旅"/>
	
	<TextView 
	    android:id="@+id/tv_toAuthName"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:padding="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:textSize="14sp"
	    android:gravity="center"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/selector_whitebutton"
	    android:textColor="@color/gray"
	    android:text="领取2元彩金"/>
</LinearLayout>