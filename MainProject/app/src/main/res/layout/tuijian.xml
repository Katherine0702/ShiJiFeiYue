<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/tuijianview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐方式"
            android:textColor="#797979"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#C0C0C0"
            android:orientation="vertical"
            android:padding="1dp" >

            <EditText
                android:id="@+id/tuijiantitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:hint="好的标题会让你成功一半（5-15内）"
                android:padding="6dp"
                android:maxLength="15"
                android:textColor="#acacac"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C0C0C0" />

            <EditText
                android:id="@+id/tuijiancontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:hint="请点击输入您的推荐语，可以是关于比赛的分享，可以使自己的宣言，能够帮您 获得更多的跟单，字数100字以内"
                android:padding="6dp"
                android:textColor="#acacac"
                android:textSize="14dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/noedit"
            style="@style/ZhuiJiaCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="本次不写"
            android:textColor="#bfbfbf"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/notuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/cornernonelinefull_redline_redfull"
            android:gravity="center"
            android:padding="6dp"
            android:text="不发起推荐"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/cornernonelinefull_greyline_nofull"
            android:gravity="center"
            android:padding="6dp"
            android:text="  发起推荐  "
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/cornerfullred"
            android:gravity="center"
            android:padding="6dp"
            android:text="     确  定     "
            android:textColor="#ffffff"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>