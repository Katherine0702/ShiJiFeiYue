<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/footballdetaildelete" />

        <TextView
            android:id="@+id/dan"
            android:layout_width="30dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/danbackchooseno"
            android:gravity="center"
            android:text="胆"
            android:textColor="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/dan"
            android:layout_toRightOf="@id/delete"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周三001"
                    android:textColor="#BE9A6B"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <TextView
                        android:id="@+id/titlezhu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="巴西"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="vs"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/titleke"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="瑞典"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:id="@+id/havedate0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/zhusheng0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/dlt_tzback"
                        android:gravity="center"
                        android:text="主胜"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ping0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/dlt_tzback"
                        android:gravity="center"
                        android:text="平"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/kesheng0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/dlt_tzback"
                        android:gravity="center"
                        android:text="客胜"
                        android:textSize="10sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="14dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rangqiuback2"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/danviewspf"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@mipmap/dan"
                        android:text="单"
                        android:textColor="#FFFFFF"
                        android:textSize="8sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/nodate0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dlt_tzback"
                    android:gravity="center"
                    android:text="暂未开售"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="2dp" >

                <LinearLayout
                    android:id="@+id/havedate1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/zhusheng1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/dlt_tzback"
                        android:gravity="center"
                        android:text="主胜"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ping1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/dlt_tzback"
                        android:gravity="center"
                        android:text="平"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/kesheng1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/dlt_tzback"
                        android:gravity="center"
                        android:text="客胜"
                        android:textSize="10sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="14dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/rangqiu"
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rangqiuback"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/danviewrqspf"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@mipmap/dan"
                        android:text="单"
                        android:textColor="#FFFFFF"
                        android:textSize="8sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/nodate1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dlt_tzback"
                    android:gravity="center"
                    android:text="暂未开售"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linexu" />

</LinearLayout>