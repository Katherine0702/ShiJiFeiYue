<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlt_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_darkgreen"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/whiteshake" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="摇一摇机选"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="选2个不同号码，猜中开奖的任意2位即中8元"
        android:textColor="#9fbe53"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlt_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view1"
                style="@style/fast_number" >

                <TextView
                    android:id="@+id/num1"
                    style="@style/fast_number_lg"
                    android:text="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/num1_notice"
                style="@style/fast3mianhezhi_itemchild3"
                android:layout_marginTop="5dp"
                android:text="遗漏：1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view2"
                style="@style/fast_number" >

                <TextView
                    android:id="@+id/num2"
                    style="@style/fast_number_lg"
                    android:text="2" />
            </LinearLayout>

            <TextView
                android:id="@+id/num2_notice"
                style="@style/fast3mianhezhi_itemchild3"
                android:layout_marginTop="5dp"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view3"
                style="@style/fast_number" >

                <TextView
                    android:id="@+id/num3"
                    style="@style/fast_number_lg"
                    android:text="3" />
            </LinearLayout>

            <TextView
                android:id="@+id/num3_notice"
                style="@style/fast3mianhezhi_itemchild3"
                android:layout_marginTop="5dp"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view4"
                style="@style/fast_number" >

                <TextView
                    android:id="@+id/num4"
                    style="@style/fast_number_lg"
                    android:text="4" />
            </LinearLayout>

            <TextView
                android:id="@+id/num4_notice"
                style="@style/fast3mianhezhi_itemchild3"
                android:layout_marginTop="5dp"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view5"
                style="@style/fast_number" >

                <TextView
                    android:id="@+id/num5"
                    style="@style/fast_number_lg"
                    android:text="5" />
            </LinearLayout>

            <TextView
                android:id="@+id/num5_notice"
                style="@style/fast3mianhezhi_itemchild3"
                android:layout_marginTop="5dp"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view6"
                style="@style/fast_number" >

                <TextView
                    android:id="@+id/num6"
                    style="@style/fast_number_lg"
                    android:text="6" />
            </LinearLayout>

            <TextView
                android:id="@+id/num6_notice"
                style="@style/fast3mianhezhi_itemchild3"
                android:layout_marginTop="5dp"
                android:text="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>