<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F4"
    android:orientation="vertical"
    tools:context="com.cshen.tiyu.activity.mian4.personcenter.setting.binding.NameAuthActivity" >
<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="实名认证" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >

        <LinearLayout style="@style/safe_item_linearlayout" >

            <TextView
                style="@style/safe_item_text"
                android:layout_width="50dp"
                android:text="姓  名"
                android:textColor="@color/keycolor"/>

            <EditText
                android:id="@+id/et_person_name"
                style="@style/safe_item_edittext"
                android:hint="请输入真实姓名"
                android:maxLength="10"
                android:textColorHint="@color/hintcolor" />
        </LinearLayout>

        <LinearLayout
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" >

            <TextView
                style="@style/safe_item_text"
                android:layout_width="50dp"
                android:text="身份证"
                android:textColor="@color/keycolor" />

            <EditText
                android:id="@+id/et_person_id"
                style="@style/safe_item_edittext"
                android:hint="请输入身份证号"
                android:textColorHint="@color/hintcolor" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/view_person_password"
            style="@style/safe_item_linearlayout"
            android:layout_marginTop="1dp" 
            android:visibility="gone">

            <TextView
                android:id="@+id/et_person_passwordtv"
                style="@style/safe_item_text"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:text="密  码"
                android:textColor="@color/keycolor" />

            <EditText
                android:id="@+id/et_person_password"
                style="@style/safe_item_edittext"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et_person_passwordtv"
                android:hint="请输入登录密码"
                android:textColorHint="@color/hintcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="(客户端登录密码)"
                android:textColor="#E37C79"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/forgetpw"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="忘记密码？"
        android:visibility="invisible"
        android:textColor="#4E97F1"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/btn_name_auth"
        style="@style/redButton_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:text="确认" />

    <LinearLayout
        android:id="@+id/warnview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/warn" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="重要提示"
                android:textColor="#E37C79"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/warn1"
            android:textColor="#A2A3A3"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/warn2"
            android:textColor="#A2A3A3"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/warn3"
            android:textColor="#A2A3A3"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:text="客服电话： 4009282770 "
        android:textColor="#A2A3A3"
        android:textSize="15sp" />

</LinearLayout>