<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tv_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/fast3title"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:src="@mipmap/back_icon" />

        <TextView
            android:id="@+id/tv_head_name"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/iv_back"
            android:text="玩法"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/tv_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_head_name"
            android:background="@drawable/corner_whiteline"
            android:padding="3dp" >

            <TextView
                android:id="@+id/tv_head_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任选二"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/tv_head_title_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_head_title_item"
                android:src="@mipmap/main115chooseno" />
        </RelativeLayout>

        <TextView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="助手"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_bootom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/fast3mianbottom" >

        <TextView
            android:id="@+id/jixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_black"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="机选"
            android:textColor="#FFBA00"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_black"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="清空"
            android:textColor="#FFBA00"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0注0元"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/fast3_sure"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="确定"
            android:textColor="#000000"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/prizemoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_bootom"
        android:background="#24704F"
        android:visibility="visible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:background="#000000"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/prizemoney_i"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteball"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prizemoney_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prizemoney_i"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="若中奖，奖金540元，盈利538元"
            android:textColor="#ffffff"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dlt_period"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tv_head"
        android:background="@mipmap/fast3mainback1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0E4C34" />

        <RelativeLayout
            android:id="@+id/qishuview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/qishunow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="84期开奖:115"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/prizenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/prizenumber1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:background="@mipmap/small1" />

                        <ImageView
                            android:id="@+id/prizenumber2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:background="@mipmap/small1" />

                        <ImageView
                            android:id="@+id/prizenumber3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:background="@mipmap/small1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/noprizenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:src="@mipmap/clock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等待开奖"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/fast3updown"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:paddingTop="12dp"
                android:src="@mipmap/fast3down" />
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0E4C34" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/qishunext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距01期截止"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/timeend"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:text="暂无数据"
                    android:textColor="#ffe400"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/realtimeend"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:text="04:55"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0E4C34" />
    </LinearLayout>

    <TextView
        android:id="@+id/linebelow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dlt_period"
        android:background="#0E4C34" />

    <LinearLayout
        android:id="@+id/qishuviewall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linebelow"
        android:background="#226C4D"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/statename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="形态"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="期次"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@id/period"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="开奖号码"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/hezhiname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/number"
                android:paddingLeft="20dp"
                android:paddingRight="2dp"
                android:text="和值"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/daxiaoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/hezhiname"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:text="大小"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/danshuangname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/daxiaoname"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:text="单双"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#00311C" />

        <ListView
            android:id="@+id/qishulistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </ListView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/prizemoney"
        android:layout_below="@id/linebelow"
        android:background="@mipmap/fast3mainback2"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/mainview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/shake"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/numchoose1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/fast3_6" />

            <ImageView
                android:id="@+id/numchoose2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/fast3_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/numchoose3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/fast3_6" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/load"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_head"
        android:layout_centerInParent="true"
        android:background="#000000"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/load2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/tv_bootom"
        android:layout_centerInParent="true"
        android:background="#000000"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/loading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

</RelativeLayout>