<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="安全问题认证" />

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:background="#FFFFFF" >

        <TextView
            style="@style/safe_item_text"
            android:text="问题1"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_question1"
            style="@style/safe_item_textview"
            android:textColor="#333333" />

        <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            style="@style/safe_item_text"
            android:text="答案"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/edt_answer1"
            style="@style/safe_item_edittext"
            android:hint="@string/safe_answer"
            android:maxLength="15" />
    </LinearLayout>

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            style="@style/safe_item_text"
            android:text="问题2"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_question2"
            style="@style/safe_item_textview"
            android:textColor="#333333"
            />

        <ImageView
            android:id="@+id/iv_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            style="@style/safe_item_text"
            android:text="答案"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/edt_answer2"
            style="@style/safe_item_edittext"
            android:hint="@string/safe_answer"
            android:maxLength="15" />
    </LinearLayout>

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            style="@style/safe_item_text"
            android:text="问题3"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_question3"
            style="@style/safe_item_textview"
            android:textColor="#333333"
             />

        <ImageView
            android:id="@+id/iv_arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            style="@style/safe_item_text"
            android:text="答案"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/edt_answer3"
            style="@style/safe_item_edittext"
            android:hint="@string/safe_answer"
            android:maxLength="15" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        style="@style/redButton_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="确认" />

</LinearLayout>