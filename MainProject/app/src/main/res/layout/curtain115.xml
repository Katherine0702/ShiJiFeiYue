<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlt_qishu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#E7E7E7"
        android:orientation="vertical" >

        <LinearLayout 
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/tv_tab_wan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="万位走势"
                android:textColor="@color/mainred"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_tab_qian"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="千位走势"
                android:textColor="#666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_tab_bai"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="百位走势"
                android:textColor="#666666"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_bottom_line1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/mainred" />

            <TextView
                android:id="@+id/iv_bottom_line2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/mainred"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/iv_bottom_line3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/mainred"
                android:visibility="invisible" />
        </LinearLayout>

        <include layout="@layout/qishu115_item" />

        <ScrollView
            android:id="@+id/dlt_qishu_scroll"
            android:layout_width="match_parent"
            android:layout_height="156dp" >

            <LinearLayout
                android:id="@+id/dlt_qishu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include
                    android:id="@+id/qishu0"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu1"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu2"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu3"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu4"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu5"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu6"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu7"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu8"
                    layout="@layout/qishu115_item" />

                <include
                    android:id="@+id/qishu9"
                    layout="@layout/qishu115_item" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E4E4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlt_qishu_down_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlt_qishu_view"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/qishu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="84期开奖号码"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/ll_add_ball"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@mipmap/ballback_red"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/qishunext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距00期截至还有"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/timeend"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:text="暂无数据"
                        android:textColor="@color/mainred"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/realtimeend"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:text="04:55"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dlt_down_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dlt_down_view"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <TextView
                android:id="@+id/dlt_down_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/dlt_down_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/dlt_down" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>