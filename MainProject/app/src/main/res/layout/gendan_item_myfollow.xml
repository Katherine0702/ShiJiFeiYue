<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:id="@+id/head_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="05-04"
                android:textColor="#000000"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/head_im_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/endtime"
                android:src="@mipmap/defaultpic_yuan"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/head_im_back"
                android:layout_alignLeft="@id/head_im_back"
                android:layout_alignRight="@id/head_im_back"
                android:layout_alignTop="@id/head_im_back"
                android:layout_toRightOf="@id/endtime"
                android:background="@mipmap/defaultniu" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/endtime"
                android:background="@mipmap/defaultpic_yuan" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/head"
                android:text="竞彩牛人"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/head"
                android:text="已跟投2.00元"
                android:textColor="#929292"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/v"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/name"
                android:src="@mipmap/v1" />

            <TextView
                android:id="@+id/detils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@id/head_im_back"
                android:layout_alignTop="@id/head_im_back"
                android:gravity="center_vertical"
                android:text="查看方案详情"
                android:textColor="#3385ff"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8E8E8"
                android:orientation="vertical"
                android:padding="1dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#F9F9F9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:text="编号"
                        android:textColor="#666666"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:text="主队VS客队"
                        android:textColor="#666666"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:text="大神投注"
                        android:textColor="#666666"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8" />

                <LinearLayout
                    android:id="@+id/match1"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/matchkey1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周四008"
                        android:textColor="#454545"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/hostteamname1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="玻利维亚维亚"
                            android:textColor="#454545"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vs"
                            android:textColor="#454545"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/gustteamname1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巴巴多斯维亚"
                            android:textColor="#454545"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/touzhu1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="主胜"
                        android:textColor="@color/mainred"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/matchs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        




        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp" >

                <TextView
                    android:id="@+id/chuanfa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/cornerfullred"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/realtimeview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/chuanfa"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="投"
                    android:textColor="#686868"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/realtime"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="#F9F9F9"
                    android:focusable="true"
                    android:gravity="center"
                    android:maxLength="5"
                    android:text="10"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="倍"
                    android:textColor="#686868"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tobuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@drawable/cornerfullred"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="立即跟单"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E8E8E8" />
    </LinearLayout>

    <ImageView
        android:id="@+id/prize"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/prize_yes"
        android:visibility="gone" />
</RelativeLayout>