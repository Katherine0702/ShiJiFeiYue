<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="猜豹子号（3个号相同）"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/view0"
            style="@style/fast3mianhezhi_itemfather" >

            <TextView
                android:id="@+id/num0"
                style="@style/fast3mianhezhi_itemchild1"
                android:text="三同号通选" />

            <TextView
                android:id="@+id/num0_tx"
                style="@style/fast3mianhezhi_itemchild2"
                android:text="任意一个豹子开出，即中40元" />
        </LinearLayout>

        <TextView
            android:id="@+id/num0_notice"
            style="@style/fast3mianhezhi_itemchild3"
            android:text="1" />
    </LinearLayout>

</LinearLayout>