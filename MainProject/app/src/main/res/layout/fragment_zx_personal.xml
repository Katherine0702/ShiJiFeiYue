    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/mainred" >
       <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        <com.cshen.tiyu.widget.ShapedImageView
            android:id="@+id/name_im"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/defaultpic"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            wxq:shape_mode="circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/name_im"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/zx_v1"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        
    </RelativeLayout>

    

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#DFDFDF" />

    <com.cshen.tiyu.widget.PersonalItemView
        android:id="@+id/rl_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:pname="浏览历史"
        wxq:pvalue=""
        wxq:src="@mipmap/zx_history" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

    <com.cshen.tiyu.widget.PersonalItemView
        android:id="@+id/rl_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:pname="消息中心"
        wxq:pvalue=""
        wxq:src="@mipmap/zx_message" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

    <com.cshen.tiyu.widget.PersonalItemView
        android:id="@+id/rl_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:pname="用户反馈"
        wxq:pvalue=""
        wxq:src="@mipmap/zx_feedback" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

    <com.cshen.tiyu.widget.PersonalItemView
        android:id="@+id/rl_aboutus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:pname="关于我们"
        wxq:pvalue=""
        android:visibility="gone"
        wxq:src="@mipmap/zx_aboutus" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

</LinearLayout>