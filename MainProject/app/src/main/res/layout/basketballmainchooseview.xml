<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/hunhe_item"
            style="@style/tz_115_view_back"
            android:background="@drawable/footballchooseview_itemback" >

            <TextView
                android:id="@+id/hunhe_itemtv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="混合过关"
                android:textColor="#ff812a"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sf_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/sf_itemtv"
                style="@style/tz_115_back"
                android:text="胜负" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/rfsf_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/rfsf_itemtv"
                style="@style/tz_115_back"
                android:text="让分胜负" />
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >


        <LinearLayout
            android:id="@+id/sfc_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/sfc_itemtv"
                style="@style/tz_115_back"
                android:text="胜分差" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/dxf_item"
            style="@style/tz_115_view_back" >

            <TextView
                android:id="@+id/dxf_itemtv"
                style="@style/tz_115_back"
                android:text="大小分" />
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            style="@style/tz_115_view_back" >

            <TextView
                style="@style/tz_115_back"
                android:text="让分胜负" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>