<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cshen.tiyu.activity.mian4.personcenter.redpacket.RedPacketActivity"
    android:background="#ECECEC"  >
<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="红包" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tv_redpacket_use"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="可使用"
            android:textColor="@color/mainred"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_redpacket_useno"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="已用完/过期"
            android:textColor="@color/dingdanuncolor"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_bootom_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/iv_bottom_line1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@color/mainred" />

        <ImageView
            android:id="@+id/iv_bottom_line2"
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:src="@color/mainred"
            android:visibility="invisible" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC" >
    </android.support.v4.view.ViewPager>

</LinearLayout>