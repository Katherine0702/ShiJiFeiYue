<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackdlt"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ResAuto">

    <!-- Login progress -->

    <com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="山东11选5投注" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/dlt_tztitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/dlt_jixuan1"
                style="@style/dlt_tz_view_back"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dlt_jixuan1_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jia" />

                <TextView
                    android:id="@+id/dlt_jixuan1_tx"
                    style="@style/dlt_tz_back"
                    android:text="机选1注" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlt_jixuan5"
                style="@style/dlt_tz_view_back"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dlt_jixuan5_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jia" />

                <TextView
                    android:id="@+id/dlt_jixuan5_tx"
                    style="@style/dlt_tz_back"
                    android:gravity="center"
                    android:text="机选5注" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlt_zixuan"
                style="@style/dlt_tz_view_back"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/dlt_zixuan_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jia" />

                <TextView
                    android:id="@+id/dlt_zixuan_tx"
                    style="@style/dlt_tz_back"
                    android:gravity="center"
                    android:text="继续选号" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dlt_pay_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#F8F8F8" >

            <TextView
                android:id="@+id/znzh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dlt_tz"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="智能追号"
                android:textColor="#6A6969"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dlt_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/dlt_sure"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="投注"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="20dp" >

                <TextView
                    android:id="@+id/allmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2元"
                    android:textColor="@color/mainred"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/alltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1注1倍1期"
                    android:textColor="#909090"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/dlt_pay_view"
            android:background="#E1E1E1" />

        <LinearLayout
            android:id="@+id/defalutlong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/line2"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/view10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/title10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10期"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/content10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手最爱"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1E1E1" />

            <LinearLayout
                android:id="@+id/view30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/title30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30期"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/content30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气最高"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1E1E1" />

            <RelativeLayout
                android:id="@+id/view60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/tuijian" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/title60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60期"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/content60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大奖必备"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1E1E1" />

            <LinearLayout
                android:id="@+id/view154"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/title154"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="154期"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/content154"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大奖最多"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/defalutlong"
            android:background="#E1E1E1" />

        <LinearLayout
            android:id="@+id/timelong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/line3"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="追"
                        android:textColor="#2c2c2c"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/minuslong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/minus" />

                    <EditText
                        android:id="@+id/reallong"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/editback"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/addlong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="期"
                        android:textColor="#2c2c2c"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="投"
                        android:textColor="#2c2c2c"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/minustime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/minus" />

                    <EditText
                        android:id="@+id/realtime"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/editback"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/addtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="倍"
                        android:textColor="#2c2c2c"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/realmoreview_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EBEBEB"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/realmoreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:visibility="gone" >

                <CheckBox
                    android:id="@+id/realmore"
                    style="@style/ZhuiJiaCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="5dp"
                    android:text="中奖后停止追号"
                    android:textColor="#505050"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/timelong"
            android:background="#EBEBEB" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/line0"
            android:layout_below="@id/dlt_tztitle"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/mainbackdlt"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/dlt_tzlist_back" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-10dp"
                android:background="@color/mainbackdlt" >

                <com.cshen.tiyu.widget.JixuanListView
                    android:id="@+id/dlt_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@null"
                    android:divider="@color/mainback"
                    android:dividerHeight="0dip"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:scrollbars="none"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/nodate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/jixuanhanddown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/jixuanhand" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>