<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cshen.tiyu.activity.mian4.personcenter.setting.binding.NameAuthActivity" >
<com.cshen.tiyu.widget.TopViewLeft
        android:id="@+id/tv_head_forget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        wxq:topname="找回密码" />

    <LinearLayout
        style="@style/safe_item_linearlayout"
        android:layout_marginTop="1dp"
        android:focusable="true"
        android:focusableInTouchMode="false" >

        <TextView
            style="@style/safe_item_text"
            android:text="用  户  名" />

        <EditText
            android:id="@+id/et_userName"
            style="@style/safe_item_edittext"
            android:hint="请输入用户名/手机号"
            android:maxLength="20" />
    </LinearLayout>

    <!--
         <TextView
        android:id="@+id/btn_sure"
        style="@style/redButton_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="确认" />
    -->

    <Button
        android:id="@+id/btn_sure"
        style="@style/redButton_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:text="确 认" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>