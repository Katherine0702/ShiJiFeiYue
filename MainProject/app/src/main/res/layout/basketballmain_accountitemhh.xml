                        android:text="巴西"
                        android:textColor="#333333"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VS"
                        android:textColor="#333333"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/titlezhu"
